#include <iostream>
#include <cstring>
#include <fstream>

using namespace std;

struct Student {
  char fname[15];
  char lname[15];
  int id;
  float gpa;
};

class HNode {
  Student* data;
  HNode* next;
public:
  HNode(Student* newData){
    data = newData;
    next = NULL;
  }

  void setNext(HNode* newNext){
    next = newNext;
  }

  HNode* getNext(){
    return next;
  }

  void setData(Student* newStudent){
    data = newStudent;
  }

  Student* getStudent(){
    return data;
  }
};

int hash(Student* data, int size);

int main(){
  int size = 10;
  HNode** hTable = new HNode*[size];
  Student* student = new Student();

  cout << "Enter a first name:" << endl;
  cin.get(student->fname, 15);
  cin.get();

  cout << "Enter a last name:" << endl;
  cin.get(student->lname, 15);
  cin.get();

  cout << "Enter a unique ID:" << endl;
  cin >> student->id;

  cout << "Enter a GPA:" << endl;
  cin >> student->gpa;

  hTable[0]->setData(student);

  fstream FNfile;
  FNfile.open("fname.txt");
  for(int i=0; i<5; i++){
    char* name;
    getline(FNfile, name);
    cout << name << endl;
  }
  
  return 0;
}

int hash(Student* data, int size){
  return data->id % size;
}

